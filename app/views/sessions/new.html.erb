<h4>Please log in</h4>

<div class="well">
	<%= form_tag '/login' do %>
		<div class="control-group">
			<%= label_tag :username %><br>
			<%= text_field_tag :username, params[:username] || '' %><br>
			<%= label_tag :password %><br>
			<%= password_field_tag :password, params[:password] || '' %><br>
		</div><br>
		<%= submit_tag "Login", class: 'btn btn-success' %>
	<% end %>
</div>