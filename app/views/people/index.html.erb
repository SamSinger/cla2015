<%= render 'shared/content_title', title: 'People Keeper' %>
 

<%= link_to 'Add new person', new_person_path, class: 'btn btn-success' %>

<div style="margin-top: 1em;">
<% @people.each do |person| %> 
	<div class="row" style="margin-bottom: .5em;">
		<div class="col-md-3"> 
			 <%= person.lastname %>, <%= person.firstname %> <%= person.middlename %>
		</div>		
			<% if logged_in? %>
			<div class="col-md-1">
				<%= link_to edit_person_path(person) do %>
				<div class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i> </div>
				<% end %>
			</div>	
			<% end %>	
		<div class="col-md-1">
				<%= link_to edit_person_path(person) do %>
				<div class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> </div>
				<% end %>
			</div>			
	</div>
<% end %>
</div>
